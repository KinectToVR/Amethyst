<Page
	x:Class="KinectToVR.DevicesPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:KinectToVR"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	NavigationCacheMode="Required"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals">

	<Grid>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="*" />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>

			<TextBlock FontWeight="SemiBold" Text="Tracking Devices:"
			           Margin="20,20,0,0" Grid.Row="0" />

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"
			      Margin="20,20,0,0">

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0" /> <!--tmp-->
					<ColumnDefinition Width="300" />
					<ColumnDefinition Width="0.5*" />
					<ColumnDefinition Width="280" />
					<ColumnDefinition Width="0.5*" />
					<ColumnDefinition Width="280" />
					<ColumnDefinition Width="0.5*" />
				</Grid.ColumnDefinitions>

				<ListView x:Name="TrackingDeviceListView" Grid.Column="1" CornerRadius="5"
				          Background="{StaticResource SystemControlAcrylicElementBrush}"
				          VerticalAlignment="Top" HorizontalAlignment="Stretch"
				          SelectedIndex="1" SelectionChanged="TrackingDeviceListView_SelectionChanged"
				          CanReorderItems="False" CanDragItems="False" AllowDrop="False">

					<ListView.ItemTemplate>
						<DataTemplate x:DataType="local:TrackingDevicesView">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="30" />
									<ColumnDefinition Width="170" />
								</Grid.ColumnDefinitions>

								<Grid.RowDefinitions>
									<RowDefinition Height="45" />
									<RowDefinition Height="40" />
									<RowDefinition Height="58" />
								</Grid.RowDefinitions>

								<RadioButton Grid.Column="0" Margin="0,7,0,0"
								             VerticalAlignment="Top"
								             IsHitTestVisible="False"
								             IsChecked="{x:Bind Current, Mode=OneWay}"
								             GroupName="DeviceRadioButton" />
								<TextBlock Grid.Column="1" Margin="0,10,0,0" FontWeight="Bold"
								           VerticalAlignment="Top" FontSize="16"
								           Text="{x:Bind DeviceName, Mode=OneWay}" />

								<TextBlock Grid.Column="1" Margin="10,0,0,0" FontSize="16"
								           VerticalAlignment="Top" Grid.Row="1" FontWeight="Medium"
								           Text="{x:Bind ConnectedStatus, Mode=OneWay}" />
								<TextBlock Grid.Column="1" Margin="10,0,0,0" FontSize="16"
								           VerticalAlignment="Top" Grid.Row="2" FontWeight="Medium"
								           Text="{x:Bind OnlineStatus, Mode=OneWay}" />

								<muxc:NavigationViewItem Width="49" Grid.Column="2" Grid.Row="0"
								                         HorizontalAlignment="Right" VerticalAlignment="Top"
								                         Margin="0,3,-80,0" x:Name="RefreshDeviceButton"
								                         Tapped="RefreshDeviceButton_Tapped">
									<muxc:NavigationViewItem.Icon>
										<SymbolIcon Symbol="Sync" RenderTransformOrigin="0.5,0.5">
											<SymbolIcon.RenderTransform>
												<RotateTransform x:Name="SyncRotationTransform" Angle="0" />
											</SymbolIcon.RenderTransform>
										</SymbolIcon>
									</muxc:NavigationViewItem.Icon>
								</muxc:NavigationViewItem>
							</Grid>
						</DataTemplate>
					</ListView.ItemTemplate>

				</ListView>

				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="400"
				      Grid.Row="1" Grid.Column="3" Margin="0,0,0,10" CornerRadius="5"
				      Background="{StaticResource SystemControlAcrylicElementBrush}">

					<Grid.RowDefinitions>
						<RowDefinition Height="25" />
						<RowDefinition Height="*" />
						<RowDefinition Height="50" />
						<RowDefinition Height="*" />
						<RowDefinition Height="25" />
					</Grid.RowDefinitions>

					<TextBlock Margin="40,10,0,0" Grid.Row="1"
					           VerticalAlignment="Top" Text="Currently Tracking" />
					<TextBlock Margin="50,40,0,0" Grid.Row="1"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Device: Kinect V1 (X360)" />
					<TextBlock Margin="50,70,0,0" Grid.Row="1"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Status: OK" />
					<TextBlock Margin="50,100,0,0" Grid.Row="1"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Code: RESULT_OK" />

					<TextBlock Margin="40,10,0,0" Grid.Row="3"
					           VerticalAlignment="Top" Text="Selected Item" />
					<TextBlock Margin="50,40,0,0" Grid.Row="3"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Device: Kinect V2 (XBONE)" />
					<TextBlock Margin="50,70,0,0" Grid.Row="3"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Status:" />

					<TextBlock Margin="90,90,0,0" Grid.Row="3"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="- Connected" />
					<TextBlock Margin="90,115,0,0" Grid.Row="3"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="- Offline" />

                    <Border CornerRadius="5" Margin="20,-5,20,-5" BorderThickness="2"
					        BorderBrush="{StaticResource SystemControlAccentDark1AcrylicElementAccentDark1Brush}"
					        Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    <Border CornerRadius="5" Margin="20,-5,20,-5" BorderThickness="2"
					        BorderBrush="{StaticResource SystemControlAccentDark1AcrylicElementAccentDark1Brush}"
					        Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

					<AppBarSeparator RenderTransformOrigin="0.5,0.5" Grid.Row="2"
					                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<AppBarSeparator.RenderTransform>
							<RotateTransform Angle="90" />
						</AppBarSeparator.RenderTransform>
					</AppBarSeparator>
				</Grid>

				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="200"
				      Grid.Row="1" Grid.Column="4" Margin="0,-20,0,10" CornerRadius="5" 
				      Visibility="{Binding ElementName=RestartPendingGrid, Path=Visibility,TargetNullValue=Collapsed}">
					<AppBarSeparator RenderTransformOrigin="0.5,0.5" Grid.Row="1" Grid.Column="4"
					                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<AppBarSeparator.RenderTransform>
							<RotateTransform Angle="90" />
						</AppBarSeparator.RenderTransform>
					</AppBarSeparator>
				</Grid>

				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="160"
				      Grid.Row="1" Grid.Column="5" Margin="0,0,0,10" CornerRadius="5"
					  x:Name="RestartPendingGrid" Visibility="Visible"
				      Background="{StaticResource SystemControlAcrylicElementBrush}">
					<Grid.RowDefinitions>
						<RowDefinition Height="25" />
						<RowDefinition Height="*" />
						<RowDefinition Height="25" />
					</Grid.RowDefinitions>

					<TextBlock Margin="40,10,0,0" Grid.Row="1"
					           VerticalAlignment="Top" Text="Restart Pending" />
					<TextBlock Margin="50,40,0,0" Grid.Row="1"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Reason: Device Changed" />
					<TextBlock Margin="50,70,0,0" Grid.Row="1"
					           VerticalAlignment="Top" FontWeight="SemiBold"
					           Text="Device: Kinect V2 (XBONE)" />

					<Border CornerRadius="5" Margin="20,-5,20,-5" BorderThickness="2"
					        BorderBrush="DarkRed"
					        Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
				</Grid>

                <TextBlock Grid.Column="5" Margin="10,190,0,10" FontSize="17"
                           VerticalAlignment="Top" FontWeight="SemiBold" Text="Trackers / PSMoves:" />

                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="180"
				      Grid.Column="5" Margin="0,220,0,10" CornerRadius="5"
				      Background="{StaticResource SystemControlAcrylicElementBrush}">
					<Grid.RowDefinitions>
						<RowDefinition Height="10" />
						<RowDefinition Height="*" />
						<RowDefinition Height="10" />
					</Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical"
                                Grid.Column="1" Grid.Row="1">

                        <Grid>
                            <ComboBox HorizontalAlignment="Left"
						          VerticalAlignment="Top"
						          SelectedIndex="0"
						          Grid.Column="1" Grid.Row="1"
						          Margin="135,5,0,10"
						          Width="130" Height="40">
                                <x:String>PSMS/ID: 0</x:String>
                                <x:String>PSMS/ID: 1</x:String>
                                <x:String>PSMS/ID: 2</x:String>
                            </ComboBox>
                            <TextBlock Margin="25,11,0,0" Grid.Row="1" HorizontalAlignment="Left"
						           VerticalAlignment="Top" FontWeight="SemiBold" Text="Waist:" />
                        </Grid>
                        <Grid>
                            <ComboBox HorizontalAlignment="Left"
						          VerticalAlignment="Top"
						          SelectedIndex="0"
						          Grid.Column="1" Grid.Row="1"
						          Margin="135,5,0,10"
						          Width="130" Height="40">
	                            <x:String>PSMS/ID: 0</x:String>
	                            <x:String>PSMS/ID: 1</x:String>
	                            <x:String>PSMS/ID: 2</x:String>
                            </ComboBox>
                            <TextBlock Margin="25,11,0,0" Grid.Row="1" HorizontalAlignment="Left"
						           VerticalAlignment="Top" FontWeight="SemiBold" Text="Left Foot:" />
                        </Grid>
                        <Grid>
                            <ComboBox HorizontalAlignment="Left"
						          VerticalAlignment="Top"
						          SelectedIndex="0"
						          Grid.Column="1" Grid.Row="1"
						          Margin="135,5,0,0"
						          Width="130" Height="40">
	                            <x:String>PSMS/ID: 0</x:String>
	                            <x:String>PSMS/ID: 1</x:String>
	                            <x:String>PSMS/ID: 2</x:String>
                            </ComboBox>
                            <TextBlock Margin="25,11,0,0" Grid.Row="1" HorizontalAlignment="Left"
						           VerticalAlignment="Top" FontWeight="SemiBold" Text="Right Foot:" />
                        </Grid>

                    </StackPanel>
                </Grid>

			</Grid>

		</Grid>
	</Grid>

</Page>