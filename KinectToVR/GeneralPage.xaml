								        Content="Start" Height="50" Grid.Column="1" Width="130"
								        Style="{StaticResource AccentButtonStyle}"
								        FontWeight="Medium" Margin="5,15,5,0" HorizontalAlignment="Left" />
								<Button x:Name="DiscardManualCalibrationButton"
								        Click="DiscardManualCalibrationButton_Click" CornerRadius="3" FontSize="14"
								        Content="Cancel" Height="50" Grid.Column="0" Width="130"
								        FontWeight="Medium" Margin="0,15,5,0" HorizontalAlignment="Right" />
							</Grid>

						</Grid>
					</Grid>

				</Grid>
			</SplitView.Pane>
		</SplitView>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="520" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			      Grid.Column="0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">

				<Grid.RowDefinitions>
					<RowDefinition Height="60" />
					<RowDefinition Height="170" />
					<RowDefinition Height="*" />
					<RowDefinition Height="0" />
					<RowDefinition Height="300" />
					<RowDefinition Height="60" />
					<RowDefinition Height="90" />
				</Grid.RowDefinitions>

				<TextBlock FontWeight="SemiBold" Text="Trackers" FontSize="25" Margin="40,20,0,0" Grid.Row="0" />

				<Grid HorizontalAlignment="Stretch" Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid Grid.Row="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Button FontSize="15" x:Name="CalibrationButton" Click="CalibrationButton_Click"
						        VerticalContentAlignment="Center" FontWeight="SemiBold" Content="Begin Calibration"
						        Margin="40,10,10,10" CornerRadius="3" Grid.Column="0" HorizontalAlignment="Stretch"
						        VerticalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}">
							<FlyoutBase.AttachedFlyout>
								<Flyout x:Name="ChooseDeviceFlyout">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="*" />
											<RowDefinition Height="*" />
										</Grid.RowDefinitions>

										<Grid Grid.Row="1">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="*" />
												<ColumnDefinition Width="*" />
											</Grid.ColumnDefinitions>

											<Button FontSize="15" x:Name="BaseCalibration" Click="BaseCalibration_Click"
											        VerticalContentAlignment="Center" FontWeight="SemiBold" Content="Base"
											        Margin="10,10,10,10" CornerRadius="3" Grid.Column="1" HorizontalAlignment="Stretch"
											        VerticalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" />
											<Button FontSize="15" x:Name="OverrideCalibration" Click="OverrideCalibration_Click"
											        VerticalContentAlignment="Center" FontWeight="SemiBold" Content="Override"
											        Margin="10,10,10,10" CornerRadius="3" Grid.Column="0" HorizontalAlignment="Stretch"
											        VerticalAlignment="Stretch" />

										</Grid>

										<TextBlock FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
										           Grid.Row="0" FontWeight="SemiBold"
										           Style="{ThemeResource BaseTextBlockStyle}"
										           Text="You have tracking overrides set up.&#x0a;Which device do you want to calibrate?" />


									</Grid>
								</Flyout>
							</FlyoutBase.AttachedFlyout>
						</Button>
						<Button FontSize="15" x:Name="OffsetsButton" Click="OffsetsButton_Click"
						        VerticalContentAlignment="Center" FontWeight="SemiBold" Content="Adjust Offsets"
						        Margin="10,10,40,10" CornerRadius="3" Grid.Column="1" HorizontalAlignment="Stretch"
						        VerticalAlignment="Stretch" />

					</Grid>

					<ToggleButton FontSize="15" x:Name="ToggleTrackersButton" Checked="ToggleTrackersButton_Checked"
					              Unchecked="ToggleTrackersButton_Unchecked" VerticalContentAlignment="Center"
					              FontWeight="SemiBold" Content="Connect Trackers" Margin="40,10" CornerRadius="3"
					              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" />

				</Grid>

				<Grid Grid.Row="4">
					<StackPanel Orientation="Vertical" Margin="0,5,0,0" VerticalAlignment="Bottom">
						<TextBlock FontWeight="SemiBold" Text="Device" FontSize="25"
						           Margin="40,20,0,10" Grid.Row="3" />

						<StackPanel Orientation="Horizontal" Margin="40,0,20,0">
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="Current Device:" Margin="0,0,0,0" Foreground="LightGray" />
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="Xbox One Kinect (V2)" Margin="5,0,0,0" x:Name="SelectedDeviceNameLabel" />
						</StackPanel>

						<StackPanel Orientation="Horizontal" Margin="40,5,20,0">
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="Status:" Margin="0,0,0,0" Foreground="LightGray" />
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="Not Powered" Margin="5,0,0,0" x:Name="TrackingDeviceStatusLabel" />
						</StackPanel>

						<Grid Background="{ThemeResource SystemControlAcrylicElementBrush}"
						      Width="440" Height="85" Margin="0,5,0,0" CornerRadius="3" x:Name="ErrorWhatGrid">

							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="SemiBold"
							           Text="E_NUI_NOTPOWERED" Margin="10,7,0,0" FontFamily="Consolas"
							           x:Name="TrackingDeviceErrorLabel"
							           Foreground="{StaticResource AccentAcrylicInAppFillColorDefaultBrush}" />

							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="SemiBold"
							           x:Name="ErrorWhatText"
							           Margin="10,30,5,0" Foreground="LightGray" TextWrapping="WrapWholeWords">
								<TextBlock.Text>
									There is either a problem with your adapter/cables or with the Kinect device driver registration in Windows.
								</TextBlock.Text>
							</TextBlock>
						</Grid>

						<Grid Margin="0,12,0,0" x:Name="ErrorButtonsGrid">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>

							<Button FontSize="15" x:Name="OpenDiscordButton" Click="OpenDiscordButton_Click" Height="65"
							        VerticalContentAlignment="Center" FontWeight="SemiBold" Content="Get help on Discord"
							        Margin="40,10,10,10" CornerRadius="3" Grid.Column="0" HorizontalAlignment="Stretch"
							        VerticalAlignment="Stretch" />
							<Button FontSize="15" x:Name="OpenDocsButton" Click="OpenDocsButton_Click" Height="65"
							        VerticalContentAlignment="Center" FontWeight="SemiBold" Content="View Online Docs"
							        Margin="10,10,40,10" CornerRadius="3" Grid.Column="1" HorizontalAlignment="Stretch"
							        VerticalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" />

						</Grid>

					</StackPanel>
				</Grid>

				<TextBlock FontWeight="SemiBold" Text="Status" FontSize="25" Margin="40,20,0,0" Grid.Row="5" />

				<Grid Grid.Row="6">
					<StackPanel Orientation="Vertical" Margin="0,5,0,0">

						<StackPanel Orientation="Horizontal" Margin="40,0,20,0">
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="SteamVR Driver:" Margin="0,0,0,0" Foreground="LightGray" />
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="Success! (Code 10)" Margin="5,0,0,0" x:Name="DriverStatusLabel" />
						</StackPanel>

						<StackPanel Orientation="Horizontal" Margin="40,5,20,0">
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="KinectToVR Version:" Margin="0,0,0,0" Foreground="LightGray" />
							<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold"
							           Text="v1.0.0 (K2App)" Margin="5,0,0,0" x:Name="VersionLabel" />
						</StackPanel>

					</StackPanel>
				</Grid>

			</Grid>

			<!--Skeleton canvas-->
			<Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Canvas.ZIndex="-1"
			        x:Name="SkeletonDrawingCanvas" Loaded="SkeletonDrawingCanvas_Loaded" />

			<!--Background-->
			<Grid Background="Black" Grid.Column="1" Canvas.ZIndex="-2"
			      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

			<!--No Skeleton-->
			<Viewbox Grid.Column="1" HorizontalAlignment="Stretch" Margin="20"
			         VerticalAlignment="Stretch" Stretch="Uniform" StretchDirection="DownOnly">
				<StackPanel Grid.Column="1" x:Name="NotTrackedNotice"
				            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0">

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<FontIcon Glyph="&#xE7BA;" FontSize="45" FontWeight="Bold" />
						<TextBlock Margin="10,0,0,7" Text="No skeleton found" FontSize="50" FontWeight="SemiBold" />
					</StackPanel>

					<TextBlock Margin="0,-5,0,0" FontSize="25" FontWeight="Medium" HorizontalAlignment="Center">
						<Run>Make sure the device works properly</Run>
					</TextBlock>

					<TextBlock Margin="0,0,0,0" FontSize="25" FontWeight="Medium" HorizontalAlignment="Center">
						<Run>and can see your body for tracking.</Run>
					</TextBlock>

				</StackPanel>
			</Viewbox>

			<!--Skeleton Disabled-->
			<Viewbox Grid.Column="1" HorizontalAlignment="Stretch" Margin="20"
			         VerticalAlignment="Stretch" Stretch="Uniform" StretchDirection="DownOnly">
				<StackPanel Grid.Column="1" x:Name="SkeletonHiddenNotice" Visibility="Collapsed"
				            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0">

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<FontIcon Glyph="&#xE946;" FontSize="45" FontWeight="Bold" />
						<TextBlock Margin="10,0,0,7" Text="Skeleton preview disabled" FontSize="50" FontWeight="SemiBold" />
					</StackPanel>

					<TextBlock Margin="0,-5,0,0" FontSize="25" FontWeight="Medium" HorizontalAlignment="Center">
						<Run>To re-enable it please click the</Run>
					</TextBlock>

					<TextBlock Margin="0,0,0,0" FontSize="25" FontWeight="Medium" HorizontalAlignment="Center">
						<Run>"Show/Hide Skeleton" button.</Run>
					</TextBlock>

				</StackPanel>
			</Viewbox>

			<Grid Background="Transparent" Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="20" />
					<RowDefinition Height="45" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="180" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="400" />
					</Grid.ColumnDefinitions>

					<ToggleButton x:Name="SkeletonToggleButton" Checked="SkeletonToggleButton_Checked"
					              Unchecked="SkeletonToggleButton_Unchecked" IsChecked="True"
					              VerticalContentAlignment="Center" FontWeight="SemiBold" Content="Show/Hide Skeleton"
					              Margin="20,0,0,10" CornerRadius="3" Grid.Column="0"
					              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

				</Grid>
			</Grid>

		</Grid>
	</Grid>
</Page>