        <SplitView Canvas.ZIndex="1" x:Name="CalibrationView" PaneBackground="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
	               PaneClosing="CalibrationView_PaneClosing" IsPaneOpen="False" OpenPaneLength="600" CompactPaneLength="48" DisplayMode="Overlay" CornerRadius="10">
            <SplitView.Pane>
                <Grid>
                    <Grid x:Name="CalibrationSelectionPane">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Pick a calibration mode" Margin="0,15,0,0" 
                               HorizontalAlignment="Center" FontSize="26" 
                               Style="{StaticResource BaseTextBlockStyle}"/>

                        <Grid Grid.Row="1" CornerRadius="5" Margin="50,0,50,50"
                          Background="{StaticResource SystemControlAcrylicElementBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button x:Name="AutoCalibrationButton" Grid.Row="0" MaxWidth="320" Margin="20,20,20,10" 
	                            Click="AutoCalibrationButton_Click" HorizontalAlignment="Center">
                                <Image Source="ms-appx:///Assets/autocalibration.png"/>
                            </Button>

                            <Button x:Name="ManualCalibrationButton" Grid.Row="1" MaxWidth="320" Margin="20,10,20,20" 
	                            Click="ManualCalibrationButton_Click" HorizontalAlignment="Center">
                                <Image Source="ms-appx:///Assets/manualcalibration.png"/>
                            </Button>
                        </Grid>
                    </Grid>

	                <Grid x:Name="AutoCalibrationPane">
		                <Grid.RowDefinitions>
			                <RowDefinition Height="70"/>
			                <RowDefinition Height="*"/>
		                </Grid.RowDefinitions>

		                <TextBlock Text="Automatic Calibration" Margin="0,15,0,0" 
		                           HorizontalAlignment="Center" FontSize="26" 
		                           Style="{StaticResource BaseTextBlockStyle}"/>

		                <Grid Grid.Row="1" CornerRadius="5" Margin="50,0,50,50"
		                      Background="{StaticResource SystemControlAcrylicElementBrush}">
			                <Grid.RowDefinitions>
				                <RowDefinition Height="70"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="170"/>
                                <RowDefinition Height="5*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Follow the directions" Margin="0,40,0,0" 
			                           HorizontalAlignment="Center" FontSize="20" Grid.Row="0"
			                           Style="{StaticResource BaseTextBlockStyle}"/>

                            <Border CornerRadius="75"
                                    Grid.Row="2" Width="150"
                                    Height="150" Margin="10"
                                    Padding="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="{StaticResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}">
                                <TextBlock x:Name="CalibrationCountdownLabel" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,30"
                                           Text="~" FontSize="75" FontWeight="Bold"/>
                            </Border>

                            <TextBlock x:Name="CalibrationInstructionsLabel" 
                                       Text="Start the calibration" Margin="0,15,0,0" 
                                       HorizontalAlignment="Center" FontSize="27" Grid.Row="3"
                                       Style="{StaticResource BaseTextBlockStyle}"/>

                            <Grid Grid.Row="5" VerticalAlignment="Bottom" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

	                            <Button x:Name="StartAutoCalibrationButton" 
	                                    Click="StartAutoCalibrationButton_Click" CornerRadius="3" FontSize="14" 
	                                    Content="Start" Height="50" Grid.Column="1" Width="130"
	                                    Style="{StaticResource AccentButtonStyle}" 
	                                    FontWeight="Medium" Margin="5,15,5,0" HorizontalAlignment="Left"/>
                                <Button x:Name="DiscardAutoCalibrationButton" 
                                        Click="DiscardAutoCalibrationButton_Click"  CornerRadius="3" FontSize="14" 
	                                    Content="Cancel" Height="50" Grid.Column="0" Width="130"
	                                    FontWeight="Medium" Margin="0,15,5,0" HorizontalAlignment="Right"/>
                            </Grid>

                        </Grid>
	                </Grid>

	                <Grid x:Name="ManualCalibrationPane">
		                <Grid.RowDefinitions>
			                <RowDefinition Height="70"/>
			                <RowDefinition Height="*"/>
		                </Grid.RowDefinitions>

