                                                FontWeight="Normal"
                                                Grid.Column="1"
                                                Maximum="360"
                                                Minimum="0"
                                                Value="0" Width="250"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                SpinButtonPlacementMode="Inline"
                                                SmallChange="1"
                                                Margin="10,0,0,0"
                                                LargeChange="10"/>
                                </Grid>
                                <Grid Grid.Column="0" Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="260"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Yaw:" VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
	                                       Grid.Column="0"
	                                       FontSize="17" FontWeight="Normal"/>
                                    <muxc:NumberBox x:Name="RightFootYawNumberBox"
	                                            FontSize="26"
	                                            FontWeight="Normal"
	                                            Grid.Column="1"
	                                            Maximum="360"
	                                            Minimum="0"
	                                            Value="0" Width="250"
	                                            HorizontalContentAlignment="Stretch"
	                                            VerticalAlignment="Stretch"
	                                            SpinButtonPlacementMode="Inline"
	                                            SmallChange="1"
	                                            Margin="10,0,0,0"
	                                            LargeChange="10"/>
                                </Grid>
