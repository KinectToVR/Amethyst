                        <PivotItem Header="Right Foot">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="300"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Rotation:" Grid.Row="1" Grid.Column="0" FontSize="20" FontWeight="Medium"/>
                                <Grid Grid.Column="0" Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="260"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Roll:" VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           Grid.Column="0"
                                           FontSize="17" FontWeight="Normal"/>
                                    <muxc:NumberBox x:Name="RightFootRollNumberBox"
