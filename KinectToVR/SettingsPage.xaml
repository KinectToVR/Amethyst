<Page
	x:Class="KinectToVR.SettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:KinectToVR"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	NavigationCacheMode="Required"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals">

	<Grid>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="300" />
				<RowDefinition Height="0.8*" />
				<RowDefinition Height="120" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Margin="20,20,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="4*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<TextBlock FontWeight="SemiBold"
				           Text="Note:" Margin="20,20,0,0" Grid.Row="0" Grid.Column="6" />

				<TextBlock FontWeight="Normal" TextWrapping="WrapWholeWords"
				           Margin="30,60,0,0" Grid.Row="0" Grid.Column="6"
				           Text="Turning a virtual tracker off will still let it spawn in SteamVR, but it will appear as disconnected.&#x0a;&#x0a;Disabling a virtual tracker will block it from both spawning in SteamVR and connecting/turning on." />
			</Grid>
		</Grid>

		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="220" />
				<RowDefinition Height="0.8*" />
				<RowDefinition Height="200" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<TextBlock FontWeight="SemiBold" Text="Trackers:"
			           Margin="20,20,0,0" Grid.Row="0" />

			<CheckBox Content="Connect automatically on startup"
					  x:Name="AutoSpawnCheckBox"
					  Checked="AutoSpawnCheckBox_Checked"
					  Unchecked="AutoSpawnCheckBox_Unchecked"
			          Grid.Row="0" Margin="100,15,0,0"
			          FontSize="15" FontWeight="Normal" />

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"
			      Margin="20,20,0,0">

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.25*" />
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="0.5*" />
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="0.5*" />
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="0.25*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="4*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="0"
				      Margin="0,0,0,10" CornerRadius="5,0,0,5" Background="{StaticResource SystemControlAcrylicElementBrush}" />
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1"
				      Margin="0,0,0,10" Background="{StaticResource SystemControlAcrylicElementBrush}" />
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="2"
				      Margin="0,0,0,10" Background="{StaticResource SystemControlAcrylicElementBrush}" />
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="3"
				      Margin="0,0,0,10" Background="{StaticResource SystemControlAcrylicElementBrush}" />
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="4"
				      Margin="0,0,0,10" Background="{StaticResource SystemControlAcrylicElementBrush}" />
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="5"
				      Margin="0,0,0,10" Background="{StaticResource SystemControlAcrylicElementBrush}" />
				<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="6"
				      Margin="0,0,-20,10" CornerRadius="0,5,5,0" Background="{StaticResource SystemControlAcrylicElementBrush}" />

				<StackPanel Orientation="Vertical" Grid.Row="1" Margin="20,0,0,0" Grid.Column="1">
					<TextBlock FontWeight="SemiBold" HorizontalAlignment="Center"
					           Text="Waist:" Margin="0,20,0,10"
					           Grid.Row="0" Grid.Column="0" />

					<ToggleButton Content="Turn Off" IsChecked="True"
								  x:Name="WaistOnToggleButton"
								  Checked="WaistOnToggleButton_Checked"
								  Unchecked="WaistOnToggleButton_Unchecked"
					              CornerRadius="3,3,0,0" Width="120" Height="50"
					              HorizontalAlignment="Center" />
                    <ToggleButton Content="Disable" IsChecked="True"
                                  x:Name="WaistEnabledToggleButton"
								  Checked="WaistEnabledToggleButton_Checked"
								  Unchecked="WaistEnabledToggleButton_Unchecked"
					              CornerRadius="0,0,3,3" Width="120" Height="50"
					              HorizontalAlignment="Center" />
				</StackPanel>

				<muxc:AppBarSeparator Grid.Column="2" Margin="20,0,0,10" Height="170" />

				<StackPanel Orientation="Vertical" Grid.Row="1" Margin="20,0,0,0" Grid.Column="3">
					<TextBlock FontWeight="SemiBold" HorizontalAlignment="Center"
					           Text="Left Foot:" Margin="0,20,0,10"
					           Grid.Row="0" Grid.Column="0" />

                    <ToggleButton Content="Turn Off" IsChecked="True"
                                  x:Name="LeftFootOnToggleButton"
								  Checked="LeftFootOnToggleButton_Checked"
								  Unchecked="LeftFootOnToggleButton_Unchecked"
					              CornerRadius="3,3,0,0" Width="120" Height="50"
					              HorizontalAlignment="Center" />
                    <ToggleButton Content="Disable" IsChecked="True"
                                  x:Name="LeftFootEnabledToggleButton"
								  Checked="LeftFootEnabledToggleButton_Checked"
								  Unchecked="LeftFootEnabledToggleButton_Unchecked"
					              CornerRadius="0,0,3,3" Width="120" Height="50"
					              HorizontalAlignment="Center" />
				</StackPanel>

				<muxc:AppBarSeparator Grid.Column="4" Margin="20,0,0,10" Height="170" />

				<StackPanel Orientation="Vertical" Grid.Row="1" Margin="20,0,0,0" Grid.Column="5">
					<TextBlock FontWeight="SemiBold" HorizontalAlignment="Center"
					           Text="Right Foot:" Margin="0,20,0,10"
					           Grid.Row="0" Grid.Column="0" />

                    <ToggleButton Content="Turn Off" IsChecked="True"
                                  x:Name="RightFootOnToggleButton"
								  Checked="RightFootOnToggleButton_Checked"
								  Unchecked="RightFootOnToggleButton_Unchecked"
					              CornerRadius="3,3,0,0" Width="120" Height="50"
					              HorizontalAlignment="Center" />
                    <ToggleButton Content="Disable" IsChecked="True"
                                  x:Name="RightFootEnabledToggleButton"
								  Checked="RightFootEnabledToggleButton_Checked"
								  Unchecked="RightFootEnabledToggleButton_Unchecked"
					              CornerRadius="0,0,3,3" Width="120" Height="50"
					              HorizontalAlignment="Center" />
				</StackPanel>
			</Grid>

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="3">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="300" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="300" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="4*" />
				</Grid.ColumnDefinitions>

				<Grid CornerRadius="5" Margin="20,0,20,0"
				      Background="{StaticResource SystemControlAcrylicElementBrush}">
					<Grid.RowDefinitions>
						<RowDefinition Height="1.3*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

                    <ToggleButton Content="Disable Sounds" IsChecked="True" Grid.Row="0"
                                  x:Name="SoundsEnabledToggleButton"
								  Checked="SoundsEnabledToggleButton_Checked"
								  Unchecked="SoundsEnabledToggleButton_Unchecked"
					              Height="50" Margin="30" VerticalAlignment="Top"
					              HorizontalAlignment="Stretch" />

					<Slider Grid.Row="1" Margin="20,0,20,20" Header="Sound Level"
					        HorizontalAlignment="Stretch" Width="200" Value="69"
					        x:Name="SoundsVolumeSlider" ValueChanged="SoundsVolumeSlider_ValueChanged"/>
				</Grid>

				<Grid Grid.Column="2" CornerRadius="5" Margin="0,0,40,0">
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

                    <ToggleButton Content="Freeze Tracking" IsChecked="True" Grid.Row="0"
                                  x:Name="TrackingFreezeToggleButton"
								  Checked="TrackingFreezeToggleButton_Checked"
								  Unchecked="TrackingFreezeToggleButton_Unchecked"
					              Height="50" Margin="30,30,30,15" VerticalAlignment="Bottom"
					              HorizontalAlignment="Stretch" />

                    <Button Content="Reset Configuration" Grid.Row="1"
                            x:Name="ResetConfigButton"
							Click="ResetConfigButton_Click"
					        Height="50" Margin="30,15,30,30" VerticalAlignment="Top"
					        HorizontalAlignment="Stretch" />
				</Grid>
			</Grid>
		</Grid>
	</Grid>

</Page>